<% layout("/layouts/boilerplate") %>

    <div class="filters">
        <div class="filter" id="filterid" data-category="Trending">
            <div class="filter-icon">
                <i class="fa-solid fa-fire"></i>
            </div>
            <p>Trending</p>
        </div>
        <div class="filter" id="filterid" data-category="Rooms">
            <div class="filter-icon">
                <i class="fa-solid fa-bed"></i>
            </div>
            <p>Rooms</p>
        </div>
        <div class="filter" id="filterid" data-category="Iconic-cities">
            <div class="filter-icon">
                <i class="fa-solid fa-mountain-city"></i>
            </div>
            <p>Iconic-cities</p>
        </div>
        <div class="filter" id="filterid" data-category="Mountains">
            <div class="filter-icon">
                <i class="fa-solid fa-mountain"></i>
            </div>
            <p>Mountains</p>
        </div>
        <div class="filter" id="filterid" data-category="Castles">
            <div class="filter-icon">
                <i class="fa-brands fa-fort-awesome"></i>
            </div>
            <p>Castles</p>
        </div>
        <div class="filter" id="filterid" data-category="Amazing-view">
            <div class="filter-icon">
                <i class="fa-solid fa-street-view"></i>
            </div>
            <p>Amazing-view</p>
        </div>
        <div class="filter" id="filterid" data-category="Amazing-pools">
            <div class="filter-icon">
                <i class="fa-solid fa-person-swimming"></i>
            </div>
            <p>Amazing-pools</p>
        </div>
        <div class="filter" id="filterid" data-category="Camping">
            <div class="filter-icon">
                <i class="fa-solid fa-campground"></i>
            </div>
            <p>Camping</p>
        </div>
        <div class="filter" id="filterid" data-category="Farms">
            <div class="filter-icon">
                <i class="fa-solid fa-cow"></i>
            </div>
            <p>Farms</p>
        </div>
        <div class="filter" id="filterid" data-category="Domes">
            <div class="filter-icon">
                <i class="fa-solid fa-igloo"></i>
            </div>
            <p>Domes</p>
        </div>
        <div class="filter" id="filterid" data-category="Boats">
            <div class="filter-icon">
                <i class="fa-solid fa-ship"></i>
            </div>
            <p>Boats</p>
        </div>
        <div class="tax-toggle ms-auto">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Default total after taxes</label>
            </div>
        </div>
    </div>

    <div class="card-container mt-3">
        <%for(listing of allListing){%>
            <a href="/listings/<%= listing._id %>" class="listing-index">
                <div class="card listing-card">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-image" style="height: 18rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= listing.title %>
                        </h5>
                        <p class="card-text">
                            &#8377; <%= listing.price.toLocaleString() %> /night
                                &nbsp;<i class="tax-info">+18% GST</i>
                        </p>
                        <p class="card-text">
                            <%= listing.location %> ,<%= listing.country %>
                        </p>
                    </div>
                </div>
            </a>

            <% } %>
    </div>
